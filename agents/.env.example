# Claude Code MCP Environment Variables
# Copy this file to .env and fill in your values

# Context7 API Key (required for context7 MCP)
# Get your key from: https://context7.ai/api-keys
CONTEXT7_API_KEY=your-api-key-here

# Optional: Override default MCP settings
# SEQUENTIAL_THINKING_MODE=comprehensive
# MAX_DEPTH=10
# ENABLE_VALIDATION=true

# Optional: Filesystem MCP settings
# FS_MODE=enhanced
# MAX_FILE_SIZE=10485760

# Optional: Serena MCP settings
# SERENA_MODE=comprehensive
# SYMBOL_ANALYSIS=deep

# Optional: Logging
# MCP_LOG_LEVEL=info
# MCP_LOG_FILE=/tmp/claude-mcp.log