{
  "name": "plan-agent",
  "version": "1.0.0",
  "model": "opus",
  "description": "Strategic planning and architecture specialist",
  
  "mcp_servers": {
    "sequentialthinking": {
      "enabled": true,
      "priority": 1,
      "timeout": 30000,
      "retry_attempts": 3,
      "config": {
        "max_depth": 10,
        "reasoning_mode": "comprehensive",
        "output_format": "structured"
      }
    },
    "context7": {
      "enabled": true,
      "priority": 2,
      "timeout": 15000,
      "retry_attempts": 2,
      "config": {
        "cache_results": true,
        "cache_ttl": 3600,
        "include_examples": true
      }
    }
  },
  
  "resource_limits": {
    "max_execution_time": 60000,
    "max_memory_mb": 1024,
    "max_file_size_mb": 50,
    "max_concurrent_operations": 5
  },
  
  "workflow_settings": {
    "requirements_analysis": {
      "min_confidence": 0.95,
      "require_clarification": true,
      "auto_document_assumptions": true
    },
    "architecture_design": {
      "require_diagrams": true,
      "enforce_patterns": true,
      "validate_interfaces": true
    },
    "risk_assessment": {
      "severity_levels": ["critical", "high", "medium", "low"],
      "require_mitigation": ["critical", "high"],
      "auto_generate_contingency": true
    }
  },
  
  "output_preferences": {
    "documentation_format": "markdown",
    "diagram_format": "mermaid",
    "code_style": "detailed",
    "include_examples": true,
    "verbosity": "comprehensive"
  },
  
  "quality_gates": {
    "requirements_coverage": {
      "enabled": true,
      "threshold": 1.0
    },
    "design_documentation": {
      "enabled": true,
      "required_sections": [
        "overview",
        "components",
        "interfaces",
        "data_flow",
        "deployment"
      ]
    },
    "risk_analysis": {
      "enabled": true,
      "min_risks_identified": 3
    }
  },
  
  "hooks": {
    "planning-methodology": {
      "enabled": true,
      "config": {
        "default_methodology": "agile",
        "sprint_length": 14
      }
    },
    "architecture-patterns": {
      "enabled": true,
      "config": {
        "preferred_patterns": [
          "microservices",
          "event-driven",
          "api-first"
        ]
      }
    },
    "requirements-analysis": {
      "enabled": true,
      "config": {
        "template": "user-story",
        "require_acceptance_criteria": true
      }
    },
    "documentation-templates": {
      "enabled": true,
      "config": {
        "use_adr": true,
        "auto_generate_toc": true
      }
    },
    "risk-assessment": {
      "enabled": true,
      "config": {
        "assessment_type": "comprehensive",
        "include_security": true
      }
    }
  },
  
  "environment": {
    "PLAN_AGENT_LOG_LEVEL": "info",
    "PLAN_AGENT_CACHE_DIR": "/tmp/plan-agent-cache",
    "PLAN_AGENT_TEMPLATES_DIR": "~/.claude/templates/planning"
  }
}