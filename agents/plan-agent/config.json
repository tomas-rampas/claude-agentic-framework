{
  "name": "plan-agent",
  "version": "1.0.0",
  "description": "Strategic planning and architecture specialist with deep reasoning capabilities",
  "model_preference": "claude-opus-4-1-20250805",
  "tools": {
    "file_operations": ["read", "search_files", "grep"],
    "mcp_servers": {
      "sequential-thinking": {
        "enabled": true,
        "auto_engage": true,
        "priority": "primary",
        "triggers": ["complex_problem", "architecture", "multi_step", "system_design"]
      },
      "context7": {
        "enabled": true,
        "auto_engage": false,
        "priority": "secondary",
        "triggers": ["framework", "library", "best_practices", "patterns"]
      }
    }
  },
  "triggers": ["planning", "architecture", "system design", "strategy", "roadmap"],
  "hooks": {
    "pre_planning": {
      "actions": ["verify_mcp_availability", "load_project_context", "check_dependencies"]
    },
    "planning_methodology": {
      "sequential_thinking_first": true,
      "context7_validation": true,
      "iterative_refinement": true
    },
    "post_planning": {
      "actions": ["validate_plan", "generate_tasks", "update_documentation"]
    }
  },
  "output_format": {
    "console_output": true,
    "structured_plan": true,
    "decision_tree": true,
    "performance_metrics": true
  }
}