{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ],
      "env": {
        "PROJECT_ROOT": "${workspaceFolder:-$PWD}",
        "SERENA_MODE": "refactoring",
        "SYMBOL_UPDATES": "atomic",
        "REFERENCE_TRACKING": "full",
        "SAFE_RENAME": "true",
        "IMPACT_ANALYSIS": "true"
      },
      "essential_tools_only": true,
      "max_context_tokens": 6000
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/projs"
      ],
      "env": {
        "FS_MODE": "atomic_write",
        "ENABLE_BACKUP": "true",
        "CONCURRENT_WRITES": "safe",
        "VALIDATION": "strict",
        "TRANSACTION_MODE": "true"
      },
      "essential_tools_only": true,
      "max_context_tokens": 4000
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "env": {
        "PATTERN_MODE": "implementation",
        "CODE_EXAMPLES": "true",
        "VERSION_SPECIFIC": "true",
        "BEST_PRACTICES": "enforce"
      }
    },
    "sequentialthinking": {
      "command": "bash",
      "args": ["-lc", "source .env; source $NVM_DIR/nvm.sh && npx mcp-sequentialthinking-tools"],
      "compress_descriptions": true,
      "max_context_tokens": 1200
    }
  },
  "optimization": {
    "reduce_tool_context": true,
    "target_total_tokens": 12500
  }
}