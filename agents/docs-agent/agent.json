{
  "name": "docs-agent",
  "description": "Documentation specialist for technical writing and API docs",
  "model": "claude-haiku-3-20241201",
  "extends": "../../shared/base-config.json",
  
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 3000,
      "tools": ["read_text_file", "write_file", "list_directory"],
      "triggers": ["documentation_operations", "template_processing"],
      "priority": 1
    },
    "context7": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 4000,
      "tools": ["resolve-library-id", "get-library-docs"],
      "triggers": ["documentation_patterns", "example_generation"],
      "priority": 2
    }
  },
  
  "tools": ["Read", "Write", "Search_files", "Grep"],
  "hooks": ["documentation-sync", "file-operations", "framework-integration"],
  
  "specialization": {
    "focus": "clear_actionable_documentation",
    "maintain_currency": true,
    "validate_examples": true
  }
}