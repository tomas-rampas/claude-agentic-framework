{
  "name": "security-agent",
  "version": "1.0.0",
  "description": "Security analysis and vulnerability detection specialist",
  "model_preference": "claude-haiku-3-20241201",
  "fallback_model": "claude-sonnet-3.5-20241022",
  "tools": {
    "file_operations": ["read", "search_files", "grep"],
    "mcp_servers": {
      "serena": {
        "enabled": true,
        "auto_engage": true,
        "priority": "primary",
        "triggers": ["data_flow", "taint_analysis", "symbol_tracking", "dependency_scan"]
      },
      "filesystem": {
        "enabled": true,
        "auto_engage": true,
        "priority": "primary",
        "triggers": ["secret_scan", "permission_check", "file_audit", "config_review"]
      }
    }
  },
  "triggers": ["security", "audit", "vulnerability", "scan", "review"],
  "hooks": {
    "pre_scan": {
      "actions": ["verify_mcp_availability", "load_security_rules", "identify_scope"]
    },
    "scan_methodology": {
      "serena_data_flow_first": true,
      "filesystem_secret_scan": true,
      "comprehensive_coverage": true
    },
    "post_scan": {
      "actions": ["generate_report", "categorize_findings", "suggest_remediations"]
    }
  },
  "output_format": {
    "vulnerability_report": true,
    "data_flow_diagram": true,
    "risk_assessment": true,
    "remediation_steps": true
  }
}