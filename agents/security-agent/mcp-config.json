{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ],
      "env": {
        "PROJECT_ROOT": "${workspaceFolder:-$PWD}",
        "SERENA_MODE": "security_analysis",
        "DATA_FLOW_TRACKING": "comprehensive",
        "TAINT_ANALYSIS": "true",
        "VULNERABILITY_SCAN": "true",
        "DEPENDENCY_CHECK": "true"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/projs"
      ],
      "env": {
        "FS_MODE": "security_scan",
        "SECRET_DETECTION": "true",
        "PERMISSION_CHECK": "strict",
        "SENSITIVE_PATTERNS": "true",
        "AUDIT_LOGGING": "true"
      }
    }
  }
}