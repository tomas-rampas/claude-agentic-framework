{
  "name": "reader-agent",
  "version": "1.0.0",
  "model": "haiku",
  "description": "Fast file analysis and information extraction specialist",
  
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "priority": 1,
      "timeout": 5000,
      "retry_attempts": 2,
      "config": {
        "stream_large_files": true,
        "chunk_size_kb": 1024,
        "max_file_size_mb": 500,
        "parallel_reads": 5,
        "cache_enabled": true
      }
    },
    "serena": {
      "enabled": true,
      "priority": 1,
      "timeout": 10000,
      "retry_attempts": 2,
      "config": {
        "symbol_cache": true,
        "cache_ttl": 3600,
        "lazy_load_references": true,
        "max_depth": 3
      }
    }
  },
  
  "resource_limits": {
    "max_execution_time": 30000,
    "max_memory_mb": 512,
    "max_file_size_mb": 500,
    "max_concurrent_operations": 10
  },
  
  "output_preferences": {
    "documentation_format": "markdown",
    "diagram_format": "mermaid",
    "code_style": "detailed",
    "include_examples": true,
    "verbosity": "comprehensive"
  },
  
  "analysis_settings": {
    "file_filters": {
      "exclude_patterns": [
        "node_modules/**",
        "vendor/**",
        ".git/**",
        "dist/**",
        "build/**",
        "*.min.js",
        "*.map"
      ],
      "include_extensions": [
        ".js", ".ts", ".jsx", ".tsx",
        ".py", ".go", ".java", ".rs",
        ".html", ".css", ".scss",
        ".json", ".yaml", ".yml",
        ".md", ".txt"
      ],
      "binary_extensions": [
        ".jpg", ".png", ".gif", ".pdf",
        ".zip", ".tar", ".gz",
        ".exe", ".dll", ".so"
      ]
    },
    "search_optimization": {
      "use_cache": true,
      "cache_ttl": 1800,
      "parallel_search": true,
      "max_results": 1000,
      "context_lines": 2
    },
    "symbol_analysis": {
      "extract_symbols": true,
      "include_private": false,
      "resolve_references": true,
      "build_call_graph": false
    }
  },
  
  "output_settings": {
    "summary_format": "concise",
    "include_metrics": true,
    "group_by_type": true,
    "sort_by_relevance": true,
    "max_preview_length": 200
  },
  
  "performance_tuning": {
    "small_file_threshold_kb": 1024,
    "large_file_threshold_mb": 10,
    "stream_threshold_mb": 5,
    "chunk_size_kb": 1024,
    "parallel_operations": 5
  },
  
  "hooks": {
    "file-analysis-patterns": {
      "enabled": true,
      "config": {
        "detect_type": true,
        "extract_structure": true,
        "analyze_complexity": false
      }
    },
    "data-extraction": {
      "enabled": true,
      "config": {
        "parse_json": true,
        "parse_yaml": true,
        "extract_env": true,
        "detect_secrets": true
      }
    },
    "code-exploration": {
      "enabled": true,
      "config": {
        "map_imports": true,
        "extract_functions": true,
        "build_hierarchy": true
      }
    },
    "summary-templates": {
      "enabled": true,
      "config": {
        "use_templates": true,
        "customize_per_language": true
      }
    },
    "search-strategies": {
      "enabled": true,
      "config": {
        "optimize_scope": true,
        "use_indexes": true,
        "rank_results": true
      }
    },
    "file-format-handlers": {
      "enabled": true,
      "config": {
        "auto_detect": true,
        "parse_structured": true
      }
    },
    "content-parsing": {
      "enabled": true,
      "config": {
        "extract_comments": true,
        "parse_docstrings": true,
        "process_annotations": true
      }
    }
  },
  
  "language_specific": {
    "javascript": {
      "parse_jsx": true,
      "extract_components": true,
      "map_modules": true
    },
    "python": {
      "extract_classes": true,
      "parse_decorators": true,
      "map_packages": true
    },
    "go": {
      "extract_interfaces": true,
      "map_packages": true,
      "parse_struct_tags": true
    },
    "typescript": {
      "extract_types": true,
      "parse_decorators": true,
      "strict_mode": true
    }
  },
  
  "quality_gates": {
    "analysis_completeness": {
      "min_files_processed": 0.95,
      "max_errors": 10,
      "require_summary": true
    },
    "performance": {
      "max_time_per_file_ms": 100,
      "max_memory_per_file_mb": 10,
      "max_total_time_s": 30
    }
  },
  
  "environment": {
    "READER_AGENT_LOG_LEVEL": "info",
    "READER_AGENT_CACHE_DIR": "/tmp/reader-agent-cache",
    "READER_AGENT_TEMPLATES_DIR": "~/.claude/templates/reader"
  }
}