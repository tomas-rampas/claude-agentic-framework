{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/projs"
      ],
      "env": {
        "FS_MODE": "test_discovery",
        "WATCH_MODE": "true",
        "TEST_PATTERNS": "true",
        "COVERAGE_TRACKING": "true",
        "PARALLEL_READ": "true"
      }
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server"
      ],
      "env": {
        "PROJECT_ROOT": "${workspaceFolder:-$PWD}",
        "SERENA_MODE": "test_analysis",
        "COVERAGE_ANALYSIS": "true",
        "DEPENDENCY_MAPPING": "true",
        "TEST_IMPACT": "true",
        "ASSERTION_TRACKING": "true"
      }
    }
  }
}