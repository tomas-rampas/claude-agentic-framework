{
  "name": "test-agent",
  "description": "Testing and validation specialist for quality assurance",
  "model": "claude-haiku-3-20241201",
  "extends": "../../shared/base-config.json",
  
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": false,
      "max_context_tokens": 3000,
      "tools": ["read_text_file", "write_file", "edit_file", "list_directory", "search_files"],
      "triggers": ["test_file_operations", "coverage_processing", "test_creation"],
      "priority": 1
    },
    "serena": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 3000,
      "tools": ["find_symbol", "search_for_pattern"],
      "triggers": ["test_coverage_analysis", "test_target_analysis"],
      "priority": 1
    }
  },
  
  "tools": ["Read", "Write", "Edit", "MultiEdit", "Bash", "Search_files", "Grep"],
  "hooks": ["testing-workflow", "quality-gates", "file-operations", "symbol-operations", "tdd-workflow", "zero-tolerance-quality"],
  
  "specialization": {
    "focus": "zero_failure_enforcement_and_tdd_leadership",
    "ensure_quality_standards": true,
    "prevent_regressions": true,
    "tdd_enforcement": true,
    "test_first_approach": true,
    "coordinate_with_maker": true,
    "zero_test_failures_policy": true,
    "block_on_any_failure": true,
    "comprehensive_validation": true
  }
}