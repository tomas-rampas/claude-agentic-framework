{
  "name": "test-agent",
  "version": "1.0.0",
  "description": "Test generation, execution, and coverage analysis specialist",
  "model_preference": "claude-haiku-3-20241201",
  "tools": {
    "file_operations": ["read", "write", "search_files", "grep"],
    "mcp_servers": {
      "filesystem": {
        "enabled": true,
        "auto_engage": true,
        "priority": "primary",
        "triggers": ["test_discovery", "test_run", "coverage_check", "test_watch"]
      },
      "serena": {
        "enabled": true,
        "auto_engage": true,
        "priority": "primary",
        "triggers": ["coverage_analysis", "test_impact", "dependency_check", "assertion_analysis"]
      }
    }
  },
  "triggers": ["test", "validate", "coverage", "regression", "unit test"],
  "hooks": {
    "pre_test": {
      "actions": ["verify_mcp_availability", "discover_tests", "analyze_dependencies"]
    },
    "test_methodology": {
      "filesystem_discovery": true,
      "serena_coverage_analysis": true,
      "continuous_validation": true
    },
    "post_test": {
      "actions": ["generate_coverage_report", "identify_gaps", "update_test_suite"]
    }
  },
  "output_format": {
    "test_discovery": true,
    "coverage_percentage": true,
    "test_results": true,
    "gap_analysis": true
  }
,
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(node:*)",
      "Bash(cargo:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(pkill:*)",
      "Bash(killall:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(write_to_file:*)"
    ]
  }
}