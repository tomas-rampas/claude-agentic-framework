{
  "name": "debug-agent",
  "description": "Debugging specialist for systematic error investigation",
  "model": "claude-sonnet-4-20250514",
  "extends": "../../shared/base-config.json",
  
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 4000,
      "tools": ["read_text_file", "list_directory", "search_files"],
      "triggers": ["log_analysis", "large_file_processing"],
      "priority": 1
    },
    "serena": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 5000,
      "tools": ["find_symbol", "find_referencing_symbols", "search_for_pattern"],
      "triggers": ["call_graph_tracing", "symbol_debugging"],
      "priority": 1
    },
    "sequentialthinking": {
      "enabled": true,
      "auto_engage": false,
      "essential_tools_only": true,
      "max_context_tokens": 3000,
      "tools": ["sequentialthinking_tools"],
      "triggers": ["complex_debugging", "root_cause_analysis"],
      "priority": 2
    }
  },
  
  "tools": ["Read", "Bash", "Search_files", "Grep"],
  "hooks": ["debugging-support", "error-handling", "performance-monitor", "file-operations", "symbol-operations"],
  
  "resource_limits": {
    "max_execution_time": 180000,
    "max_memory_mb": 2048,
    "max_file_size_mb": 1000
  },
  
  "specialization": {
    "focus": "systematic_problem_solving",
    "methodology": "scientific_approach",
    "document_process": true
  }
}