{
  "name": "smart-mcp",
  "description": "Intelligent MCP server activation based on context and task requirements",
  "version": "2.0",
  
  "activation_rules": {
    "filesystem": {
      "conditions": ["file_size > 1MB", "atomic_write_required", "directory_operations", "concurrent_access"],
      "auto_activate": false,
      "cache_duration": 300000
    },
    "serena": {
      "conditions": ["symbol_modification", "refactoring_task", "reference_tracking", "code_analysis"],
      "auto_activate": false,
      "cache_duration": 1800000
    },
    "context7": {
      "conditions": ["external_library_usage", "framework_implementation", "best_practices_needed"],
      "auto_activate": false,
      "cache_duration": 3600000
    },
    "sequentialthinking": {
      "conditions": ["problem_complexity > 3", "architectural_decision", "systematic_approach_needed"],
      "auto_activate": false,
      "cache_duration": 1800000
    }
  },
  
  "fallback_strategies": {
    "filesystem": "native Read/Write tools",
    "serena": "grep/text-based search",
    "context7": "cached knowledge",
    "sequentialthinking": "linear reasoning"
  },
  
  "performance_monitoring": {
    "track_usage": true,
    "measure_response_time": true,
    "log_fallbacks": true,
    "optimize_caching": true
  }
}